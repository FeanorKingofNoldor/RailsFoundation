<div class="<%= style() %>" data-controller="<%= component_identifier("Dropdown") %>">
 <button type="button" data-action="click-><%= component_identifier("Dropdown") %>#toggle" class="inline-flex w-full justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold <%= style(text: :primary) %> shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
   <%= @text %>
   <svg class="-mr-1 size-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
     <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
   </svg>
 </button>

<div data-dropdown-target="menu" class="hidden absolute right-0 z-50 mt-2 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black/5 focus:outline-none">
 <div class="py-2 space-y-1 whitespace-nowrap"> 
   <% @items.each do |item| %>
     <% if item[:method] == :post %>
       <%= button_to item[:href], method: :post, class: "w-full" do %>
         <div class="flex items-center justify-end gap-3 px-4 py-2 text-sm #{style(text: :secondary)} hover:bg-gray-100">
           <%= image_tag("icons/moon.svg", class: "w-4 h-4") %>
           <%= item[:text] %>
         </div>
       <% end %>
     <% else %>
       <%= link_to item[:href], class: "block px-4 py-2 text-sm #{style(text: :secondary)} hover:bg-gray-100" do %>
         <div class="flex items-center justify-end gap-3">
           <%= image_tag("icons/moon.svg", class: "w-4 h-4") %>
           <%= item[:text] %>
         </div>
       <% end %>
     <% end %>
   <% end %>
 </div>
</div>
</div>